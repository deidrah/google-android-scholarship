<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tea"
    tools:context="com.example.android.teaclub.TeaClub">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/logo"
            android:layout_alignStart="@+id/logo"
            android:layout_below="@+id/logo"
            android:layout_marginTop="21dp"
            android:text="@string/subTitle"
            android:textSize="18sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/mapImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/logo"
            android:layout_toRightOf="@+id/logo"
            android:src="@drawable/localization" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mapImg"
            android:layout_toLeftOf="@+id/mapImg"
            android:layout_toStartOf="@+id/mapImg"
            android:text="@string/address" />

        <TextView
            android:id="@+id/mailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/siteImg"
            android:layout_toLeftOf="@+id/mapImg"
            android:layout_toStartOf="@+id/mapImg"
            android:text="@string/mail" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phoneImg"
            android:layout_alignEnd="@+id/mailTextView"
            android:layout_alignRight="@+id/mailTextView"
            android:text="@string/phone" />

        <ImageView
            android:id="@+id/siteImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mapImg"
            android:layout_alignStart="@+id/mapImg"
            android:layout_below="@+id/mapImg"
            android:layout_marginTop="50dp"
            android:src="@drawable/page" />

        <ImageView
            android:id="@+id/phoneImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/siteImg"
            android:layout_alignStart="@+id/siteImg"
            android:layout_below="@+id/siteImg"
            android:layout_marginTop="50dp"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/joinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/phoneTextView"
            android:layout_marginTop="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/button1" />

    </RelativeLayout>

</ScrollView>
